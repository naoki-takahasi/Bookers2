<body>
  <main>
    <p id="notice"></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <h2>User info</h2>
          <%= image_tag current_user.get_image(100,100) %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= current_user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= current_user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <span class="btn btn-outline-secondry btn-block">
              <i class="fas fa-user-cog"></i>
              <%= link_to edit_user_path(id: current_user) %>
            </span>
          </div>
          <h2 class="mt-3">New book</h2>
          <%= form_with model: @book, url: '/books', method: :post do |f| %>
            <p>"Title"</p>
            <%= f.text_field :title %>

            <p>"Opinion"</p>
            <%= f.text_area :body %>

            <%= f.submit 'Create Book' %>

          <% end %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>Title</th>
                <th>Opinion</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
              <tr>
                <td><%= image_tag book.get_image(100,100) %></td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</body>