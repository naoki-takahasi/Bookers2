<main>
  <p id="notice"><%= notice %></p>
  <% if @book.errors.any? %>
    <%= @book.errors.count %> error prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <h2>User info</h2>
          <%= image_tag @book.user.get_profile_image(100,100) %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= @book.user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @book.user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <button type="button" class="btn btn-outline-secondary btn-block">
              <%= link_to edit_user_path(id: current_user) do%>
              <i class="fas fa-user-cog"></i>
              <% end %>
            </button>
          </div>
          <h2 class="mt-3">New book</h2>
          <%= form_with model: @book_new, url: '/books', method: :post do |f| %>
            <p>"Title"</p>
            <%= f.text_field :title %>

            <p>"Opinion"</p>
            <%= f.text_area :body %>

            <%= f.submit 'Create Book', class: "btn btn-success" %>

          <% end %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table table-hover table-inverse">
            <tbody>
              <tr>
                <td><%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= link_to @book.user.name, user_path(@book.user_id) %></td>
                <td><%= link_to @book.title, book_path(@book.id) %></td>
                <td><%= @book.body %></td>
                <% if @book.user == current_user %>
                <td>
                  <button type="button" class="btn btn-success">
                    <%= link_to "Edit", edit_book_path(@book.id)%>
                  </button>
                </td>
                <td>
                  <button type="button" class="btn btn-danger">
                    <%= link_to "Destroy", book_path(@book.id), method: :delete,
                    "data-confirm" => "Are you sure?" %>
                  </button>
                </td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</main>