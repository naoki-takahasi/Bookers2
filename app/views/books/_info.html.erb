<div class="col-md-3">
  <h2>User info</h2>
    <%= image_tag book.user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= book.user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(book.user_id), class: "btn btn-outline-secondary btn-block" do%>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
        <%= form_with model: book_new, url: '/books', class: "form-group", method: :post do |f| %>

          <label class="form-label">Title</label>
          <%= f.text_field :title, class: "form-control" %><br>

          <label class="form-label">Opinion</label>
          <%= f.text_area :body, class: "form-control" %><br>

          <%= f.submit 'Create Book', class: "btn btn-success" %>

        <% end %>
</div>